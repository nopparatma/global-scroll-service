    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "ioredis-mock": "^8.13.1",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
