    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.1.0",
    "i18next": "^25.6.3",
    "i18next-fs-backend": "^2.6.1",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
