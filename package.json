{
  "name": "global-scroll-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "worker": "nodemon src/worker.ts",
    "start:worker": "node dist/worker.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "dotenv -e .env -- npx prisma migrate dev",
    "db:push": "dotenv -e .env -- npx prisma db push",
    "db:studio": "dotenv -e .env -- npx prisma studio",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
