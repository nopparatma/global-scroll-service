generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  deviceId    String   @unique @map("device_id")
  countryCode String   @default("XX") @map("country_code")
  username    String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("users")
}

// ============================================
// Transaction History Tables
// ============================================

// Raw data: Every 30 seconds, retention 7 days
model TransactionHistoryRaw {
  id          Int      @id @default(autoincrement())
  countryCode String   @map("country_code")
  height      BigInt
  recordedAt  DateTime @default(now()) @map("recorded_at")

  @@index([countryCode, recordedAt(sort: Desc)])
  @@index([recordedAt(sort: Desc)])
  @@map("transaction_history_raw")
}

// Daily aggregates: infinite retention
model TransactionHistoryDaily {
  id          Int      @id @default(autoincrement())
  countryCode String   @map("country_code")
  height      BigInt
  minHeight   BigInt   @map("min_height")
  maxHeight   BigInt   @map("max_height")
  sampleCount Int      @map("sample_count")
  recordedAt  DateTime @map("recorded_at")

  @@index([countryCode, recordedAt(sort: Desc)])
  @@index([recordedAt(sort: Desc)])
  @@map("transaction_history_daily")
}
